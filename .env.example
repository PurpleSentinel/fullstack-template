# Shared
NODE_ENV=development
PSS_MASTER_KEY=replace-with-32-byte-random-base64
JWT_SECRET=replace-with-long-random-secret
JWT_TTL_SECONDS=900
JWT_REFRESH_WINDOW_SECONDS=3600
REFRESH_TOKEN_TTL_SECONDS=2592000
AUTH_MAX_FAILED_LOGINS=5
AUTH_AUTO_UNLOCK_MINUTES=30

# PostgreSQL
PGHOST=postgres
PGPORT=5432
PGUSER=hr_admin
PGPASSWORD=hr_password
PGDATABASE=hr_system

# Redis (distributed rate limiting)
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=hr-system

# MFA
MFA_TOTP_ISSUER=CorporateHR
MFA_TOTP_PERIOD_SECONDS=30
MFA_ENROLL_TTL_SECONDS=600
MFA_CHALLENGE_TTL_SECONDS=300

# DPoP
DPOP_NONCE_TTL_SECONDS=120
DPOP_PROOF_MAX_AGE_SECONDS=300

# Service ports (container internal)
AUTH_SERVICE_PORT=3001
CORE_API_PORT=3002
TOOLS_SERVICE_PORT=3004
REPORTS_SERVICE_PORT=3005
CLIENT_PORT=5173
